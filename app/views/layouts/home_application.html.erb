<!DOCTYPE html>
<html>
  <head>
    <title>TheJourney</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="home-bg">

      <nav class="navbar navbar-expand-sm">
        <%= link_to 'Home', home_path, class:"navbar-brand nav-anchor" %>
        <button class="navbar-toggler" style="background-color:white" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'About', about_path, class:"nav-anchor" %>
            </li>

            <% if user_signed_in? %>
              <li class="nav-item">Hello, <%= current_user.username %>
                <%= link_to 'My Page', user_path(current_user), class:"nav-anchor" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign out', sessions_path, method: :delete, class:"nav-anchor"  %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign In', new_sessions_path, class:"nav-anchor" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_path, class:"nav-anchor" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

      <% if flash[:notice].present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% elsif flash[:alert].present? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <div class="center">
        <a class="link-style" href="/users/new">Sign In</a>
        <a class="link-style" href="/users/new">Sign In</a>
      </div>
    </div>

    <div>
      <%= yield %>
    </div>
  </body>
</html>
