<!DOCTYPE html>
<html>
  <head>
    <title>TheJourney</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <div class="nav-center">
    <nav class="navbar navbar-expand-sm">
      <%= link_to image_tag("logo.gif", border: 0, class:"logo"), home_path, class:"navbar-brand nav-anchor" %>
      <button class="navbar-toggler" style="background-color:black" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'ABOUT', about_path, class:"nav-anchor" %>
          </li>

          <% if user_signed_in? %>
            <li class="nav-item">
              <span class="nav-anchor"> / HELLO,</span> <span class="nav-anchor" style="font-weight:bold"><%= current_user.username.upcase %><span>
            </li>
            <li class="nav-item">
              <%= link_to '/ MY PAGE', user_path(current_user), class:"nav-anchor" %>
            </li>
            <li class="nav-item">
              <%= link_to '/ SIGN OUT', sessions_path, method: :delete, class:"nav-anchor"  %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to '/ SIGN IN', new_sessions_path, class:"nav-anchor" %>
            </li>
            <li class="nav-item">
              <%= link_to '/ SIGN UP', new_user_path, class:"nav-anchor" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>



    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag 'santorini.jpg', class:"d-block w-100 home-carousel", alt: "Santorini"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style" href="/users/new">Sign In</a>
            <a class="link-style" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_barcelona.jpeg', class:"d-block w-100 home-carousel", alt: "Barcelona"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style" href="/users/new">Sign In</a>
            <a class="link-style" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_kyoto.jpeg', class:"d-block w-100 home-carousel", alt: "Kyoto"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style" href="/users/new">Sign In</a>
            <a class="link-style" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_paris.jpeg', class:"d-block w-100 home-carousel", alt: "Paris"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style" href="/users/new">Sign In</a>
            <a class="link-style" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_rio.jpeg', class:"d-block w-100 home-carousel", alt: "Rio"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style" href="/users/new">Sign In</a>
            <a class="link-style" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_rome.jpeg', class:"d-block w-100 home-carousel", alt: "Rome"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style" href="/users/new">Sign In</a>
            <a class="link-style" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_venice.jpeg', class:"d-block w-100 home-carousel", alt: "Venice"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style" href="/users/new">Sign In</a>
            <a class="link-style" href="/users/new">Sign In</a>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div>

      <% if flash[:notice].present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% elsif flash[:alert].present? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </div>

    <div>
      <%= yield %>
    </div>
  </body>
</html>
