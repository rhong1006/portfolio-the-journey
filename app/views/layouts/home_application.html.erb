<!DOCTYPE html>
<html>
  <head>
    <title>TheJourney</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/nav_bar' %>
    <%= render 'layouts/flash' %>

    <!-- ========= Bootstrap Carousel ============= -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag 'santorini.jpg', class:"d-block w-100 home-carousel", alt: "Santorini"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style-button" href="/users/new">Sign In</a>
            <a class="link-style-button" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_barcelona.jpeg', class:"d-block w-100 home-carousel", alt: "Barcelona"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style-button" href="/users/new">Sign In</a>
            <a class="link-style-button" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_kyoto.jpeg', class:"d-block w-100 home-carousel", alt: "Kyoto"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style-button" href="/users/new">Sign In</a>
            <a class="link-style-button" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_paris.jpeg', class:"d-block w-100 home-carousel", alt: "Paris"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style-button" href="/users/new">Sign In</a>
            <a class="link-style-button" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_rio.jpeg', class:"d-block w-100 home-carousel", alt: "Rio"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style-button" href="/users/new">Sign In</a>
            <a class="link-style-button" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_rome.jpeg', class:"d-block w-100 home-carousel", alt: "Rome"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style-button" href="/users/new">Sign In</a>
            <a class="link-style-button" href="/users/new">Sign In</a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag 'beautiful_city_venice.jpeg', class:"d-block w-100 home-carousel", alt: "Venice"%>
          <div class="carousel-caption d-none d-md-block">
            <a class="link-style-button" href="/users/new">Sign In</a>
            <a class="link-style-button" href="/users/new">Sign In</a>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div>
      <%= yield %>
    </div>
  </body>
</html>
