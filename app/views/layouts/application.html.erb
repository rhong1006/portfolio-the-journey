<!DOCTYPE html>
<html>
  <head>
    <title>TheJourney</title>
    <%= csrf_meta_tags %>

    <script>
      //@environment variable is passed from application controller 
      <% if @environment == 'production' %>
        var env = 'production'
      <% else %>
        var env = 'development'
      <% end %>
    </script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/nav_bar' %>
    <hr class="curly-lines">
    <%= render 'layouts/flash' %>
    <div>
      <%= yield %>
    </div>
  </body>
</html>
