<!DOCTYPE html>
<html>
  <head>
    <title>TheJourney</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- ========= Bootstrap NavBar ============= -->
    <div class="nav-center">
      <nav class="navbar navbar-expand-sm">
        <%= link_to image_tag("logo.gif", border: 0, class:"logo"), home_path, class:"navbar-brand nav-anchor" %>
        <button class="navbar-toggler" style="background-color:black" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'ABOUT', about_path, class:"nav-anchor" %>
            </li>

            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="nav-anchor"> / HELLO,</span> <span class="nav-anchor" style="font-weight:bold"><%= current_user.username.upcase %><span>
              </li>
              <li class="nav-item">
                <%= link_to '/ MY PAGE', user_path(current_user), class:"nav-anchor" %>
              </li>
              <li class="nav-item">
                <%= link_to '/ SIGN OUT', sessions_path, method: :delete, class:"nav-anchor"  %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to '/ SIGN IN', new_sessions_path, class:"nav-anchor" %>
              </li>
              <li class="nav-item">
                <%= link_to '/ SIGN UP', new_user_path, class:"nav-anchor" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
    <hr class="curly-lines">
    <!-- ========= Bootstrap Flash ============= -->
    <div>
      <% if flash[:notice].present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% elsif flash[:alert].present? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </div>

    <div>
      <%= yield %>
    </div>
  </body>
</html>
