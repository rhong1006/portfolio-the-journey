<%= simple_form_for @expense_tracker, url: trip_expense_trackers_path(@trip), remote: true do |f| %>
<ul style="color:red">
  <li style="float:left;margin:0 22px 0 75px">Category and price must be filled</li>
  <li>Date must be before or equal to today's date</li>
<ul>
  <div class="row">
    <div class="col-md-2">
      <%= f.input :category, placeholder: "Category", label: false %>
    </div>

    <div class="col-md-2">
      <%= f.input :date, placeholder: "Date", label: false %>
    </div>

    <div class="col-md-3">
      <%= f.input :description, placeholder: "Description", label: false %>
    </div>

    <div class="col-md-2">
      <%= f.input :price, placeholder: "Price", label: false %>
    </div>

    <div class="col-md-1">
      <%= select_tag "code", options_for_select(coutnry_code_arr.map  { |c| [ c, c] }) %>
    </div>

    <div class="col-md-2">
      <button type="submit" style="border:none;background:none;">
          <%= fa_icon "plus-circle 2x" %>
      </button>
      <%= fa_icon("times-circle 2x") %>
    </div>
  </div>
<% end %>
