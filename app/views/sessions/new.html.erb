
<div class="container">
  <div class="center">
    <%= simple_form_for :session, url: sessions_path do |f| %>
      <h2>Sign In</h2>

      <div class="form-group">
        <%= f.input :email, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.input :password, class:"form-control" %>
      </div>
      <%= f.submit 'Sign In!', class:"btn btn-primary"%>
    <% end %>
  </div>
</div>

